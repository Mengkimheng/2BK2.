-- Define a variable to control the script state
local isFarmingEnabled = false

-- Function to start farming
local function startFarming()
    print("Farming started...")
    -- Add code to perform farming actions here
end

-- Function to stop farming
local function stopFarming()
    print("Farming stopped.")
    -- Add code to stop farming actions here
end

-- Function to toggle farming
local function toggleFarming()
    if isFarmingEnabled then
        stopFarming()
        isFarmingEnabled = false
    else
        startFarming()
        isFarmingEnabled = true
    end
end

-- Example usage
print("Press 'T' to toggle farming")

-- Simulate user input (for educational purposes)
local userInput = 'T' -- Simulate pressing 'T' key

if userInput == 'T' then
    toggleFarming()
end
